        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %> -->
  </div>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class=”field”>
   <%= form.label :worksite %>
   <%= form.file_field :worksite %>
  </div>

  <div class=”field”>
   <%= form.label :link %>
   <%= form.text_field :link %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
