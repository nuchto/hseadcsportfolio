<%= form_with(model: group, local: true, :class => 'col-4 m-auto') do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="container">
      <div class="row">
            <div class="well span4 offset4">
              <div class="">
                <h1>Новая группа</h1>
              </div>
              <div class="card">
              <form>
              <div class="field form-group">
                <%= form.label "Название группы" %>
                <%= form.text_field :name, :class => 'form-control' %>
              </div>
              <div class="field form-group">
                <%= form.label "Начало обучения" %>
                <%= form.select :year_start, options_for_select([["2016"], ["2017"], ["2018"], ["2019"], ["2020"]]), {}, {:class => 'form-control custom-select'} %>
                </div>

              <div class="field form-group">
                <%= form.label "Конец обучения" %>
                <%= form.select :year_end, options_for_select([["2020"], ["2021"], ["2022"], ["2023"], ["2024"]]), {}, {:class => 'form-control custom-select'} %>
              </div>
              <div class="form-group">
                <%= form.label "Курс" %>
                <%= form.select :level_quantity, options_for_select([["1"], ["2"], ["3"], ["4"]]), {}, {:class => 'form-control custom-select'} %>
                </div>


              <div class="field form-group">
                <%= form.label "Обложка группы"  %>
                      <div class="field form-group">
                        <div class="input-group">
                          <div class="custom-file">
                            <!-- <label class="custom-file-label" for="inputGroupFile01">Выберите файл</label> -->
                            <%= form.file_field :groupcover, :type => 'file', :class => 'custom-file-input', :id => 'inputGroupFile01', 'aria-label' => 'inputGroupFileAddon01', :style => 'cursor: pointer;' %>

                          </div>
                        </div>
                      </div>
                    </div>



                <div class="d-flex justify-content-between mt-4 mb-5">

                    <div class="actions">
                      <%= form.submit 'Создать группу', :class => 'btn btn-dark btn-lg' %>
                      <%= link_to 'Все группы', groups_path, :class => 'btn btn-light btn-lg' %>
                    </div>

                </div>
                </form>
              </div>
            </div>
          </div>
        </div>


<% end %>
