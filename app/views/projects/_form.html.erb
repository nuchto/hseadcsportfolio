<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :level %>

    <%= form.select(:level) do %>
      <% [['1', 1], ['2', 2], ['3', 3], ['4', 4] ].each do |c| -%>
        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :group_id %>
    <%= select("project", "group_id", Group.all.collect { |p| [ p.name, p.id] }, { include_blank: true }) %>
    <!-- <%= form.select(:group_id) do %>
      <% [['Новая кровь', 1], ['Третий отряд', 2], ['Ночь нежна', 3], ['Поток 2020', 4] ].each do |c| -%>
        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %> -->

  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class=”field”>
	  <%= form.label :work %>
	  <%= form.file_field :work, :multipart => true  %>
  </div>

  <div class=”field”>
 	  <%= form.label :workcover %>
 	  <%= form.file_field :workcover %>
   </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
